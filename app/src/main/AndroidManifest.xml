<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mobileapp_newhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileApp_NewHub"
        tools:targetApi="31">

        <!-- Launcher: Màn hình chọn vai trò -->
        <activity
            android:name=".auth.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".auth.SplashActivity" android:exported="false" />

        <!-- Admin -->
        <activity android:name=".admin.AdminActivity" android:exported="false" />
        <activity android:name=".admin.AddEditPostActivity" android:exported="false"/>

        <!-- Main UI -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Reader -->
        <activity
            android:name=".ui.detail.ArticleDetailActivity"
            android:exported="false" />

        <!-- Auth -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false" />

    </application>

</manifest>